<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>login_index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>s1</servlet-name>
        <servlet-class>com.tanrui.servlet.login_validate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>s1</servlet-name>
        <url-pattern>/s1</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>s2</servlet-name>
        <servlet-class>com.tanrui.servlet.register_validate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>s2</servlet-name>
        <url-pattern>/s2</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>com.tanrui.servlet.search_servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>lessons_page_1</servlet-name>
        <servlet-class>com.tanrui.servlet.lessons_page_1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>lessons_page_1</servlet-name>
        <url-pattern>/lp1</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>next_page</servlet-name>
        <servlet-class>com.tanrui.servlet.next_page</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>next_page</servlet-name>
        <url-pattern>/np</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>pre_page</servlet-name>
        <servlet-class>com.tanrui.servlet.pre_page</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>pre_page</servlet-name>
        <url-pattern>/pp</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>submit_comment</servlet-name>
        <servlet-class>com.tanrui.servlet.submit_comment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>submit_comment</servlet-name>
        <url-pattern>/sc</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>submit_contact</servlet-name>
        <servlet-class>com.tanrui.servlet.submit_contact</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>submit_contact</servlet-name>
        <url-pattern>/sct</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>quit_login</servlet-name>
        <servlet-class>com.tanrui.servlet.quit_login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>quit_login</servlet-name>
        <url-pattern>/ql</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>cf1</filter-name>
        <filter-class>com.tanrui.filter.character_filter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>cf1</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>